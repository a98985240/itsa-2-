/*[C_MM188-易] 購買門票問題*/
#include <iostream>
#include <algorithm>
#include <string.h>
#include <cmath>
using namespace std;

int main()
{
    int num;
    int total;
    cin >> num;
    if(num<10)
    {
        total=num*400;
    }
    else if(num>=10&&num<20)
    {
        total=num*400*0.9;
    }
    else if(num>=20&&num<30)
    {
        total=num*400*0.8;
    }
    else if(num>=30&&num<100)
    {
        total=num*400*0.7;
    }
    else if(num>=100)
    {
        total=num*400*0.6;
    }
    cout << total << endl;
}
