#include <iostream>
#include <algorithm>
#include <string.h>
using namespace std;

bool mycompare(int a,int b)
{
    return a>b;
}

int main()
{
    int num;
    int array[100];
    cin >> num;
    for(int i=0;i<num;i++)
    {
        cin >>array[i];
    }
    sort(array,array+num,mycompare);
    for(int i=0;i<num;i++)
    {
        cout << i+1 <<" "<<array[i] <<endl ;
    }
}
